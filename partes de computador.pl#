%regra do inicio da consulta.


consulta:-
    write("Bem vindo(a)! Qual peça de computador você gostaria de saber mais sobre? Digite o número:"), nl,
    write("1. Processador"),nl,
    write("2. Placa Mãe"), nl,
    write("3. Memoria RAM"), nl,
    write("4. Placa de video"), nl,
    write("5. Armazenamento"),nl,
    write("6. fonte de alimentação"),nl,
    write("7. Mostrar valores"),nl,
    read(Opcao),nl,
    escolha(Opcao).

escolha(1):-
    listing(processador/5),
    write("Digite o ID do processador que voce escolheu da lista: "),
    read(ID),nl,nl,
    processador(Nome, ID, Velocidade, Soquete, Preco),
    write("Nome: "), write(Nome), nl,
    write("Velocidade: "), write(Velocidade), nl,
    write("Soquete: "), write(Soquete), nl,
    write("Preço: "), write(Preco), nl,nl,
    consulta.

escolha(2):-
    listing(placas_mae/8),
    write("Digite o ID da placa mãe que voce quer consultar da lista: "),
    read(ID),nl,nl,
    placas_mae(Nome,ID,Tamanho,Soquete,Ddr,M_2,Slots,Preco),
    write("Nome: "), write(Nome), nl,
    write("Velocidade: "), write(Tamanho), nl,
    write("Soquete: "), write(Soquete), nl,
    write("DDR: ") , write(Ddr), nl,
    write("Aceita SSD NMVE? : "),write(M_2), nl,
    write("Slots de Memoria RAM: "),write(Slots), nl,
    write("Preço: "),write("R$ "), write(Preco), nl,nl,
    consulta.

escolha(3):-
    listing(memoria_ram/6),
    write("Digite o ID da placa mãe que voce quer consultar da lista: "),
    read(Id),nl,nl,
    memoria_ram(Nome,Id,Ddr,Frequencia,Velocidade,Preço),
    write("Nome: "), write(Nome), nl,
    write("DDR: "), write(Ddr), nl,
    write("Frequencia: ") , write(Frequencia), nl,
    write("Velocidade: "), write(Velocidade), nl,
    write("Preço: "),write("R$ "), write(Preço), nl,nl,
    consulta.

escolha(4):-
    listing(placa_de_video/7),
    write("Digite o ID da placa mãe que voce quer consultar da lista: "),
    read(Id),nl,nl,
    placa_de_video(Nome,Id,Saida,Resolução,Fonte,Memoria, Preco),
    write("Nome: "), write(Nome), nl,
    write("Tipo de saida de video: "), write(Saida), nl,
    write("Resolução: "), write(Resolução), nl,
    write("Consumo de energia: ") , write(Fonte), nl,
    write("Memoria de video : "),write(Memoria), nl,
    write("Preço: "),write("R$ "), write(Preco), nl,nl,
    consulta.



